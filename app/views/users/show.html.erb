<% @character_races = {0 => "Titan", 1 => "Hunter", 2 => "Warlock"} %>
<% @character_images = {
    0 => "https://assets.tentonhammer.com/guides/attached_images/000/000/188/medium/destiny-titan-hero-image.jpg?1468380213", 
    1 => "http://oyster.ignimgs.com/mediawiki/apis.ign.com/destiny/thumb/2/2a/Hunter.jpg/468px-Hunter.jpg", 
    2 => "http://oyster.ignimgs.com/mediawiki/apis.ign.com/destiny/thumb/6/6b/Warlock.jpg/468px-Warlock.jpg"
  }
%>

    <section class="hero is-dark is-bold">
      <div class="hero-body">
        <div class="container">
          <h1 class="title">
            <%= @user.display_name %>
          </h1>
          <h2 class="subtitle">
            Trials of Osiris
          </h2>
        </div>
      </div>
    </section>

    <br> <br>

    <div class="container">
      
<div class=stat-scroller>
  <% get_stats("too").each do |x| %>
   
    <div class="card">
      <div class="card-image card-image-fix">
        <figure class="image is-4by3">
          <img src=<%= @character_images[x["Character Type"]] %> alt="Image">
        </figure>
      </div>

      <div class="card-content">
            <div class="media">
              <div class="media-left">
                <figure class="image is-48x48 subclass-image-fix round-image">
                  <img src="http://www.bungie.net/common/destiny_content/icons/2cf39a104d882ce05160fa7dd8627eb6.jpg" alt="Image">
                </figure>
              </div>
              <div class="media-content">
                <p class="title is-4">
                  <h1 class="is-title title">
                    <%=  @character_races[x["Character Type"]]  %> 
                    <small>
                    <span class="weekly-kd"><%= x["Character Stats"]["K/D Ratio"] %></span>
                    <span style="color: red;"> KD</span></small>
                  </h1>
                </p>                
              </div>
            </div>
            <hr>
            <table class="center full-width">
              <tbody class="center">
              <tr class="center red-text">
                <th class="center">ELO</th>
                <th class="center">Week KD</th>
                <th class="center">Flawless</th>
                <th class="center">Streak</th>
              </tr>   
              <tr class="center">
                <td class="center"><%= x["Character Stats"]["ELO"] %></td>
                <td class="center">1.45</td>
                <td class="center">53x</td>
                <td class="center">4</td>
              </tr>
              </tbody>
            </table>
            <hr/>
            <div class="columns is-mobile">
              <div class="column">
                <small class="red-text">Armor</small>
                  <progress class="progress is-primary" value=<%= x["Character Stats"]["Armor"] %> max="10"></progress>
                  <small class="red-text">Agility</small>
                  <progress class="progress is-primary" value=<%= x["Character Stats"]["Agility"] %> max="10"></progress>
                  <small class="red-text">Recovery</small>
                  <progress class="progress is-primary" value=<%= x["Character Stats"]["Recovery"] %> max="10"></progress>
                </div>
              
              <div class="column">
                  <small class="red-text">Discipline</small>
                  <progress class="progress is-info" value=<%= x["Character Stats"]["Discipline"] %> max="300"></progress>
                  <small class="red-text">Strength</small>
                  <progress class="progress is-info" value=<%= x["Character Stats"]["Strength"] %> max="300"></progress>
                  <small class="red-text">Intellect</small>
                  <progress class="progress is-info" value=<%= x["Character Stats"]["Intellect"] %> max="300"></progress>
              </div>
            </div>
            <hr/>
            <div class="columns is-mobile">
              <div class="column">
                <div class="gun-display-name">Parthian Shot</div>
              </div>
              <div class="column">
                <figure class="image is-64x64 round-image">
                  <img src="https://www.bungie.net/common/destiny_content/icons/96a49484b513930a01d18441870beddf.jpg">
                </figure>
              </div>
              <div class="column">
                <div class="gun-display-name">Ice Breaker</div>
              </div>
              <div class="column">
                <figure class="image is-64x64 round-image">
                  <img src="https://www.bungie.net/common/destiny_content/icons/39d0a26b64d5de3c12c728542205f156.jpg">
                </figure>
              </div>
            </div>
            <div class="columns is-mobile">
              <div class="column">
                <div class="gun-display-name">Hunger of Crota</div>
              </div>
              <div class="column">
                <figure class="image is-64x64 round-image">
                  <img src="https://www.bungie.net/common/destiny_content/icons/ab097307de908f2c0a623185cb633347.jpg">
                </figure>
              </div>
              <div class="column">
                <div class="gun-display-name">Deidris's Fist</div>
              </div>
              <div class="column">
                <figure class="image is-64x64 round-image">
                  <img src="https://www.bungie.net/common/destiny_content/icons/9ea4ac58576b86a808a60e0df2af9a9b.jpg">
                </figure>
              </div>
            </div>
          </div>
    </div>

    
  <%end%>  
</div>    
    </div>
