<% info = get_stats("too") %>

<% username = @user.nil? ? @player_stat.display_name : @user.display_name %>

<% if info.nil? %> 
  <div class="container games">
    ERROR: n00b!  NO TRIALS STATS FOUND FOR THIS PLAYER
  </div>
<% else %>  
 
<div class="scroller">
<% info.each_with_index do |x, index| %>


<div class="shadow-effect" style="padding-top: 10px;"><!--OPEN FIRST CHARACTER--> 


        <!--OPEN GAMERTAG INFORMATION-->

            <div class="row row-alignment-trials">
                    <div class="col s3"><span class="valign-wrapper left-align subclass-fix-trials"><img class="subclass-icon tooltipped" data-position="bottom" data-delay="50" data-tooltip="<%= x["Character Items"]["Subclass"]["Item Name"] %>" src=<%= x["Character Items"]["Subclass"]["Item Icon"] %> alt=""></span></div>
                    <div class="col s7 valign-wrapper left-align"><span class="gamertag-trials"><%= username %></span></div>
                    <div class="col s2 kd-align-fix-trials">
                       <span class="kd-trials center-align"><%= x["Character Stats"]["K/D Ratio"] %></span><br>
                       <span class="character-type-trials"><%=  @character_races[x["Character Type"]]%></span>
                    </div>
            </div>


        <!--CLOSE GAMERTAG INFORMATION-->



        <!--OPEN EMBLEM INFORMATION-->


                <div class="row container-fix-trials"><!--OPEN PLAYER CARD ROW-->

                    <div class="col s12 container-fix-trials"><img class="emblem-background-trials" src=<%= x["Character Items"]["Emblem Background"] %> alt=""></div><!--CLOSE EMBLEM CARD ROW-->
                
                </div><!--CLOSE PLAYER CARD ROW-->

        <!--CLOSE EMBLEM INFORMATION-->





                        <div class="slider">
                            <ul class="slides">

                            
                            <li><!--OPEN GUN SLIDE-->
                                

                                        <!--OPEN GUNS INFORMATION-->

                                <div class="row trials-row-fix"><!--OPEN GUN NAMES ROW-->
                                    <div class="col s12"><!--OPEN FIRST COLUMN-->
                                        <div class="row"><!--OPEN NESTED ROW-->
                                            <div class="col s4 weapon-name-trials center-align gun-name-trials truncate"><%= x["Character Items"]["Primary Weapon"]["Item Name"] %></div>
                                            <div class="col s4 weapon-name-trials center-align gun-name-trials truncate"><%= x["Character Items"]["Secondary Weapon"]["Item Name"] %></div>
                                            <div class="col s4 weapon-name-trials center-align gun-name-trials truncate"><%= x["Character Items"]["Heavy Weapon"]["Item Name"] %></div>
                                        </div><!--CLOSE NESTED ROW-->
                                    </div><!--CLOSE FIRST COLUMN-->
                                </div><!--CLOSE GUN NAMES ROW-->


                                
                                
                                
                                <div class="row"><!--OPEN GUN PICTURES ROW-->
                                    <div class="col s12"><!--OPEN FIRST COLUMN-->
                                        <div class="row"><!--OPEN NESTED ROW-->
                                            <div class="col s4 weapon-container"><img class="gun-icons-trials tooltipped" data-position="right" data-delay="50" data-tooltip="<%= x["Character Items"]["Primary Weapon"]["Item Name"] %>" src=<%= x["Character Items"]["Primary Weapon"]["Item Icon"] %> alt=""></div>
                                            <div class="col s4 weapon-container"><img class="gun-icons-trials tooltipped" data-position="right" data-delay="50" data-tooltip="<%= x["Character Items"]["Secondary Weapon"]["Item Name"] %>" src=<%= x["Character Items"]["Secondary Weapon"]["Item Icon"] %> alt=""></div>
                                            <div class="col s4 weapon-container"><img class="gun-icons-trials tooltipped" data-position="right" data-delay="50" data-tooltip="<%= x["Character Items"]["Heavy Weapon"]["Item Name"] %>" src=<%= x["Character Items"]["Heavy Weapon"]["Item Icon"] %> alt=""></div>
                                        </div><!--CLOSE NESTED ROW-->
                                    </div><!--CLOSE FIRST COLUMN-->
                                </div><!--CLOSE GUN PICTURES ROW-->


                        <!--CLOSE GUNS INFORMATION-->
                                
                            </li><!--CLOSE GUN SLIDE-->




                            <li><!--OPEN GEAR SLIDE-->


                                     <!--OPEN GEAR INFORMATION-->

                                <div class="row trials-row-fix"><!--OPEN GEAR NAMES ROW-->
                                    <div class="col s12"><!--OPEN FIRST COLUMN-->
                                        <div class="row"><!--OPEN NESTED ROW-->
                                            <div class="col s4 weapon-name-trials center-align gun-name-trials truncate"><%= x["Character Items"]["Helmet"]["Item Name"] %></div>
                                            <div class="col s4 weapon-name-trials center-align gun-name-trials truncate"><%= x["Character Items"]["Gauntlets"]["Item Name"] %></div>
                                            <div class="col s4 weapon-name-trials center-align gun-name-trials truncate"><%= x["Character Items"]["Chest Armor"]["Item Name"] %></div>
                                        </div><!--CLOSE NESTED ROW-->
                                    </div><!--CLOSE FIRST COLUMN-->
                                </div><!--CLOSE GEAR NAMES ROW-->


                                
                                
                                
                                <div class="row"><!--OPEN GEAR PICTURES ROW-->
                                    <div class="col s12"><!--OPEN FIRST COLUMN-->
                                        <div class="row"><!--OPEN NESTED ROW-->
                                            <div class="col s4 weapon-container"><img class="gun-icons-trials tooltipped" data-position="right" data-delay="50" data-tooltip="<%= x["Character Items"]["Helmet"]["Item Name"] %>" src=<%= x["Character Items"]["Helmet"]["Item Icon"] %> alt=""></div>
                                            <div class="col s4 weapon-container"><img class="gun-icons-trials tooltipped" data-position="right" data-delay="50" data-tooltip="<%= x["Character Items"]["Gauntlets"]["Item Name"] %>" src=<%= x["Character Items"]["Gauntlets"]["Item Icon"] %> alt=""></div>
                                            <div class="col s4 weapon-container"><img class="gun-icons-trials tooltipped" data-position="right" data-delay="50" data-tooltip="<%= x["Character Items"]["Chest Armor"]["Item Name"] %>" src=<%= x["Character Items"]["Chest Armor"]["Item Icon"] %> alt=""></div>
                                        </div><!--CLOSE NESTED ROW-->
                                    </div><!--CLOSE FIRST COLUMN-->
                                </div><!--CLOSE GUN PICTURES ROW-->


                        <!--CLOSE GEAR INFORMATION-->


                                
                            </li><!--CLOSE GEAR SLIDE-->


                            </ul>
                        </div><!--CLOSE SLIDER-->














        



        <!--OPEN SECTION INFORMATION-->



                <div class="section white trials-section-fix">


                        <div class="row"><!--OPEN HEADER ROW-->
                            <div class="col s6 center-align">BADGES<hr style="height: 3px;"></div><!--CLOSE COLUMN-->
                            <div class="col s6 center-align">CALLOUTS<hr style="height: 3px;"></div><!--CLOSE COLUMN-->
                        </div><!--CLOSE HEADER ROW-->
                        

                        <div class="row left-align"><!--OPEN CONTENT ROW-->

                            <div class="col s6 left-align">
                                
                                <div class="chip">
                                    <img class="mini-weapon-icons" src="https://vignette3.wikia.nocookie.net/destinypedia/images/5/54/Sniper_Rifle_Loader_perk_icon.png/revision/latest?cb=20160730002730" alt="Sniper">
                                    Sniper
                                </div>

                                <div class="chip">
                                    <img class="mini-weapon-icons" src="https://vignette3.wikia.nocookie.net/destinypedia/images/6/68/Hand_Cannon_Loader_icon.png/revision/latest?cb=20150909081128" alt="Contact Person">
                                    Hand Cannon
                                </div>

                                <div class="chip">
                                    <img class="mini-weapon-icons" src="https://vignette2.wikia.nocookie.net/destinypedia/images/2/22/Fastball_icon.png/revision/latest?cb=20150909081131" alt="Contact Person">
                                    Grenades
                                </div>

                                <div class="chip">
                                    <img class="mini-weapon-icons" src="https://vignette3.wikia.nocookie.net/destinypedia/images/5/54/Sniper_Rifle_Loader_perk_icon.png/revision/latest?cb=20160730002730" alt="Marksman">
                                    Marksman
                                </div>
                            
                            </div><!--CLOSE BADGES COLUMN-->





                            <div class="col s6 center-align">
                            <table> 
                            <tr> 
                                <th></th>
                                <th class="center-align table-header-trials">WK</th>
                                <th class="center-align table-header-trials">YR</th>
                            </tr>
                            <tr> 
                                <th class="center-align table-header-trials">KD</th>
                                <th class="trials-table-stats center-align">?</th>
                                <th class="trials-table-stats center-align"><%= x["Character Stats"]["K/D Ratio"] %></th>
                            </tr>
                            <tr> 
                                <th class="center-align table-header-trials">KA/D</th>
                                <th class="trials-table-stats center-align">?</th>
                                <th class="trials-table-stats center-align"><%= x["Character Stats"]["KA/D Ratio"] %></th>
                            </tr>
                            <tr> 
                                <th class="center-align table-header-trials">ELO</th>
                                <th class="trials-table-stats center-align">?</th>
                                <th class="trials-table-stats center-align"><%= x["Character Stats"]["ELO"] %></th>
                            </tr>

                            </table>


                            </div><!--CLOSE CALLOUTS COLUMN-->


                        </div><!--CLOSE CONTENT ROW-->


                </div><!--CLOSE SECTION-->




        <!--CLOSE SECTION INFORMATION-->




</div><!--CLOSE FIRST CHARACTER--> 



<% end %>
<% end %>

