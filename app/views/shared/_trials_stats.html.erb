<% info = get_stats("too") %>

<% if info.nil? %> 
  <div class="container games">
    ERROR: n00b!  NO TRIALS STATS FOUND FOR THIS PLAYER
  </div>
<% else %> 
  <div class="container">      
    <div class=stat-scroller>
      <% info.each do |x| %>      
        <div class="card">
          <div class="card-image card-image-fix">
            <figure class="image is-4by3">
              <img src=<%= @character_images[x["Character Type"]] %> alt="Image">
            </figure>
          </div>
          <div class="card-content">
            <div class="media">
              <div class="columns">
                <div class="column is-2">
                  <figure class="image is-48x48 subclass-image-fix round-image">
                    <img src=<%= x["Character Items"]["Subclass"]["Item Icon"] %> alt="Image">
                  </figure>
                </div>
                <div class="column is-7 center">
                <h1 class="title stat-name-fix center"><%=  @character_races[x["Character Type"]]%></h1>
                </div>
                <div class="column is-3 center stat-numbers">
                  <span class="stat-numbers"><%= x["Character Stats"]["K/D Ratio"] %></span>
                </div>
              </div>
            </div>
            <hr>
            <table class="center full-width">
              <tbody class="center">
              <tr class="center ability-text">
                <th class="center">ELO</th>
                <th class="center">Week KD</th>
                <th class="center">Flawless</th>
                <th class="center">Streak</th>
              </tr>   
              <tr class="center">
                <td class="center"><%= x["Character Stats"]["ELO"] %></td>
                <td class="center">-</td>
                <td class="center">-</td>
                <td class="center">-</td>
              </tr>
              </tbody>
            </table>
                <hr/>
                <div class="columns is-mobile">
                  <div class="column">
                    <small class="ability-text">Armor</small>
                      <progress class="progress is-info" value=<%= x["Character Stats"]["Armor"] %> max="10"></progress>
                      <small class="ability-text">Agility</small>
                      <progress class="progress is-info" value=<%= x["Character Stats"]["Agility"] %> max="10"></progress>
                      <small class="ability-text">Recovery</small>
                      <progress class="progress is-info" value=<%= x["Character Stats"]["Recovery"] %> max="10"></progress>
                    </div>
                  
                  <div class="column">
                    <small class="ability-text">Discipline</small>
                    <progress class="progress is-info" value=<%= x["Character Stats"]["Discipline"] %> max="300"></progress>
                    <small class="ability-text">Strength</small>
                    <progress class="progress is-info" value=<%= x["Character Stats"]["Strength"] %> max="300"></progress>
                    <small class="ability-text">Intellect</small>
                    <progress class="progress is-info" value=<%= x["Character Stats"]["Intellect"] %> max="300"></progress>
                  </div>
                </div>
                <hr/>
                <div class="columns is-mobile">
                  <div class="column">
                    <figure class="image is-64x64 round-image">
                      <img src=<%= x["Character Items"]["Primary Weapon"]["Item Icon"] %>>
                    </figure>
                  </div>
                  <div class="column">
                    <figure class="image is-64x64 round-image">
                      <img src=<%= x["Character Items"]["Secondary Weapon"]["Item Icon"] %>>
                    </figure>
                  </div>
                  <div class="column">
                      <figure class="image is-64x64 round-image">
                        <img src=<%= x["Character Items"]["Heavy Weapon"]["Item Icon"] %>>
                      </figure>
                  </div>
                  <div class="column">
                      <figure class="image is-64x64 round-image">
                        <img src=<%= x["Character Items"]["Artifact"]["Item Icon"] %>>
                      </figure>
                  </div>
                </div>
                <div class="columns is-mobile">
                    <div class="column">
                      <figure class="image is-64x64 round-image">
                        <img src=<%= x["Character Items"]["Helmet"]["Item Icon"] %>>
                      </figure>
                    </div>
                    <div class="column">
                      <figure class="image is-64x64 round-image">
                        <img src=<%= x["Character Items"]["Gauntlets"]["Item Icon"] %>>
                      </figure>
                    </div>
                    <div class="column">
                        <figure class="image is-64x64 round-image">
                          <img src=<%= x["Character Items"]["Chest Armor"]["Item Icon"] %>>
                        </figure>
                    </div>
                    <div class="column">
                        <figure class="image is-64x64 round-image">
                          <img src=<%= x["Character Items"]["Leg Armor"]["Item Icon"] %>>
                        </figure>
                    </div>
                  </div>
              </div>
        </div>
      <%end%>  
    </div>    
  </div>
<% end %>