                    <%= f.select :raid_difficulty, ["Normal", "Hard"], {}, {id: "difficulty" } %>
                </div>
            </div>

            <div class="row">
                <div class="input-field col s12 m6">
                    <label class="mic-label" style="top: -25px;">Have a mic?</label>
                    <%= f.select :mic_required, [["Yes", true], ["No", false] ], {}, {id: "mic_choice" } %>
                </div>
                <div class="input-field col s12 m6">
                    <label class="mic-label" style="top: -25px;">Looking for...</label>
                    <%= f.select :looking_for, ["Any", "Sherpa", "Sherpee", "Similar"], {}, {id: "looking_for" } %>
                </div>
            </div>

            <div class="row">
                <div class="row">
