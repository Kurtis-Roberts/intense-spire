
<div class="row">
  <%= form_for Micropost.new, :html => {:class => "col s12"}, remote: true do |f| %>

    <div class="input-field col s6">
        <%= f.select :game_type,  options_for_select(["Trials of Osiris", "Wrath of the Machine", "King's Fall", "Crota's End", "Vault of Glass", "Nightfall",  "PVP - Coming Soon!"], disabled: ["PVP - Coming Soon!"])%>
      <label>Gametype</label>
    </div>

    <div class="row">
        <div class="row">
          <div class="input-field col s12">
            <i class="material-icons prefix">mode_edit</i>
            <%= f.text_area :content, class: "materialize-textarea", id: "icon_prefix2", placeholder: "Message...", "data-length" => '50' %>
          </div>
        </div>

    </div>

      <%= f.submit "Post", class: "btn waves-effect waves-light" %>
    <% end %>
</div>
<hr>