    <div class="row">
        <%= form_for Micropost.new, :html => {:class => "col s12"}, remote: true do |f| %>
            <div class="row">
                <div class="input-field col s12 m6 l6">
                    <label class="gametype-label" style="top: -25px;">Gametype</label>
                    <%= f.select :game_type, ["Wrath of the Machine", "King's Fall", "Crota's End", "Vault of Glass", "Nightfall"], {}, {id: "pve-game-select" } %>
                </div>

                <!-- <div class="input-field col s4">
