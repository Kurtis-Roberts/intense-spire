<% user_id = User.find_by(:display_name => micropost.user["display_name"]).id %>
<% character_races = {0 => "Titan", 1 => "Hunter", 2 => "Warlock"} %>
<% stats =[] %>
<% case micropost.game_type 
when "Trials of Osiris" 
    stats = get_stats("too")[0] 
        end %>

<div class="col s12 m8 offset-m2 l6 offset-l3">
    <div class="card-panel grey lighten-5 z-depth-1">
        <div class="card-content">
            <strong><%= link_to micropost.user["display_name"], user_path(user_id) %></strong> -
            <%= character_races[stats["Character Type"]] %> -
            <%= micropost.game_type %> <small> <%= time_ago_in_words(micropost.created_at) %> ago</small>
        </div>
        <br>    
        <div class="row valign-wrapper">
            <div class="col s2">
                <%= image_tag micropost.user["profile_picture"] , class: "circle responsive-img" %>
            </div>
            <div class="col s10">
                <span class="black-text">
                    <%= micropost.content %>
                </span>
            </div>
        </div>

        <div class="card-tabs">
            <ul class="tabs tabs-fixed-width">
                <li class="tab"><a href="#test4">Yearly</a></li>
                <li class="tab"><a href="#test5">Weekly</a></li>
                <li class="tab"><a href="#test6">This Map</a></li>
            </ul>
        </div>
        <div class="card-content grey lighten-4">
            <div id="test4">

                <div class="row">

                    <% stats["Character Stats"].each do |k,v| %>
                        <div class="col s3">
                            <p><b><%= k %></b></p> 
                            <p> <%= v %> </p>
                        </div> 
                    <% end %>
                </div>
            </div>

            <div id="test5">Test 2</div>
            <div id="test6">Test 3</div>
        </div>
        <br>    
        <ul class="collapsible" data-collapsible="accordion">
            <li>
                <div class="collapsible-header"><i class="fa fa-shield fa-lg"></i>Titan</div>
                <div class="collapsible-body"><span>Lorem ipsum dolor sit amet.</span></div>
            </li>
            <li>
                <div class="collapsible-header"><i class="fa fa-ravelry fa-lg"></i>Warlock</div>
                <div class="collapsible-body">
                        
            </li>
            <li>
                <div class="collapsible-header"><i class="fa fa-superpowers fa-lg"></i>Hunter</div>
                <div class="collapsible-body">
                    <span>
                        
                    </span>
                </div>
            </li>
        </ul>
        <div class="row">
                <div class="col s12 m4 l2">
                    <%= link_to @message, target: "_blank" do %>
                    <span class="icon">
                        <i class="fa fa-envelope"></i>
                    </span>
                <% end %>
            </div>
            <div class="col s12 m4 l8">
                <p></p>
            </div>
            <div class="col s12 m4 l2  right-align">
                <% if current_user == micropost.user %>
                    <%=  link_to  micropost, method: :delete, data: { confirm: "Are you sure?" }, remote: true do %>
                        <span class="icon">
                        <i class="fa fa-trash"></i>
                        </span>
                    <% end %>
                <% end %>
            </div>
        </div>
    </div>
</div>
